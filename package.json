{
  "name": "dream-project",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve game-board-ui",
    "build": "ng build game-board-ui",
    "watch": "ng build game-board-ui --watch --configuration development",
    "test": "ng test game-board-ui --watch=false",
    "build:app": "ng build game-board",
    "test:app": "ng test game-board --watch=false",
    "format": "prettier --write .",
    "verify": "npm run format && npm run build:app && npm run test:app && npm run build && npm test && npm run e2e",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:debug": "playwright test --debug"
  },
  "private": true,
  "packageManager": "npm@10.9.4",
  "dependencies": {
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/router": "^21.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.4",
    "@angular/cli": "^21.0.4",
    "@angular/compiler-cli": "^21.0.0",
    "@playwright/test": "^1.58.2",
    "@types/node": "^25.2.3",
    "jsdom": "^27.1.0",
    "prettier": "^3.7.4",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8"
  }
}
