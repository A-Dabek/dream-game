rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to all documents for 30 days
    // WARNING: These rules are insecure and should be updated before production
    match /{document=**} {
      allow read, write: if request.time < timestamp.date(2026, 3, 17);
    }
  }
}