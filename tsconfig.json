/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "preserve",
    "baseUrl": ".",
    "paths": {
      "@dream/ai": ["projects/game-board/ai/index.ts"],
      "@dream/item": ["projects/game-board/item/index.ts"],
      "@dream/item-library": ["projects/game-board/item-library/index.ts"],
      "@dream/board": ["projects/game-board/board/index.ts"],
      "@dream/engine": ["projects/game-board/engine/index.ts"],
      "@dream/turn-manager": ["projects/game-board/turn-manager/index.ts"],
      "@dream/game": ["projects/game-board-ui/game-logic/index.ts"],
      "@dream/player": ["projects/game-board/player/index.ts"],
      "@dream/rating": ["projects/game-board/rating/index.ts"],
      "@dream/ui": ["projects/game-board-ui/index.ts"],
      "@test": ["test/index.ts"]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  },
  "files": [],
  "references": [
    {
      "path": "./projects/game-board/tsconfig.app.json"
    },
    {
      "path": "./projects/game-board/tsconfig.spec.json"
    },
    {
      "path": "./projects/game-board-ui/tsconfig.app.json"
    },
    {
      "path": "./projects/game-board-ui/tsconfig.spec.json"
    }
  ]
}
